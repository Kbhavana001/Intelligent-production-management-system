# Copy this file to .env and fill values for your MySQL database

# MySQL connection (if absent, the server will fall back to file-based store)
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=ips_db

# Optional: change the auth token secret
JWT_SECRET=replace_me_in_production

# PORT the auth server listens on (defaults to 4000)
PORT=4000
